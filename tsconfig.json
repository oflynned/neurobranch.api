{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@db": [
        "libs/prisma/src"
      ],
      "@db/*": [
        "libs/prisma/src/*"
      ],
      "@firebase": [
        "libs/firebase/src"
      ],
      "@firebase/*": [
        "libs/firebase/src/*"
      ],
      "@graphql": [
        "libs/graphql/src"
      ],
      "@graphql/*": [
        "libs/graphql/src/*"
      ],
      "@config": [
        "libs/config/src"
      ],
      "@config/*": [
        "libs/config/src/*"
      ],
      "@common": [
        "libs/common/src"
      ],
      "@common/*": [
        "libs/common/src/*"
      ],
      "@cache": [
        "libs/cache/src"
      ],
      "@cache/*": [
        "libs/cache/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
